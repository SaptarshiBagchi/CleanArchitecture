  "main": "dist/main/server.js",
  "dependencies": {
    "express": "^4.18.2",
    "module-alias": "^2.2.3",
    "mongodb": "^5.7.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "npm run build -- --watch",
    "start": "node dist/main/server.js",
    "dev": "nodemon -L --watch ./dist ./dist/main/server.js",
    "up": "concurrently --kill-others-on-fail \"npm run build:watch\" \"docker compose up\"",
    "down": "docker compose down",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:stage": "npm run test -- --findRelatedTests",
    "test:ci": "npm run test -- --coverage",
    "lint": "eslint --ignore-path .gitignore --ext .ts --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "_moduleAliases": {
    "@domain": "dist/domain",
    "@infrastructure": "dist/infrastructure",
    "@application": "dist/application",
    "@main": "dist/main",
    "@modules": "dist/modules"
  },
  "engines": {
    "node": "18.x"
  }
}
